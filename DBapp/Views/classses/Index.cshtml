@model IEnumerable<DBapp.Models.classs>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "classses", FormMethod.Post))
{
    <div>
        Search @Html.TextBox("searchString")
        <input id="Submit1" type="submit" value="Filter" />

    </div>
}
<table class="table">
    <tr>
        <th>
            Level
        </th>
        <th>
            Days
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
        <th>
            Student Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.class_level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.class_day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.class_starttime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.class_endtime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.student.student_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.class_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.class_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.class_id })
            </td>
        </tr>
    }

</table>
