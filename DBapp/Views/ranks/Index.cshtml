@model IEnumerable<DBapp.Models.rank>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "ranks", FormMethod.Post))
{
    <div>
        Search @Html.TextBox("searchString")
        <input id="Submit1" type="submit" value="Filter" />
    </div>
}
<table class="table">
    <tr>
        <th>
            Belt Color
        </th>
        <th>
            Date
        </th>
        <th>
            Student Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.rank_beltcolor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rank_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.student.student_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.rank_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.rank_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.rank_id })
            </td>
        </tr>
    }

</table>
